<%- model_class = Exersize -%>
<div class="page-header">
  <h1><%=t '.title', :default => Exersize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:exercise_performed) %></dt>
      <dd><pre class="prettyprint"><%= @exersize.exercise_performed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:load_perscribed) %></dt>
      <dd><pre class="prettyprint"><%= @exersize.load_perscribed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reps_perscribed) %></dt>
      <dd><pre class="prettyprint"><%= @exersize.reps_perscribed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sets_perscribed) %></dt>
      <dd><pre class="prettyprint"><%= @exersize.sets_perscribed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:actual_weight_lifted_1) %></dt>
      <dd><pre class="prettyprint"><%= @exersize.actual_weight_lifted_1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:actual_weight_lifted_2) %></dt>
      <dd><pre class="prettyprint"><%= @exersize.actual_weight_lifted_2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:actual_weight_lifted_3) %></dt>
      <dd><pre class="prettyprint"><%= @exersize.actual_weight_lifted_3 %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              exersizes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_exersize_path(@exersize), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              exersize_path(@exersize),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

